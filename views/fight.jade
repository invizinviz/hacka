html
  head
    title Joel-Andres
    style
      include ../style.css
      include ../animate.css

  body
    h1 Twitter Top Trumps
    p *only works with unprotected users.
    img#player1(src=image1)
    img#player2(src=image2)
    button(id="Fight") GO
    #tweetsheader(style='display: none;')
      h2 Number of Tweets:
      h3=name1
      h3(id='tweets1')=tweets1
      h3=name2
      h3(id='tweets2')=tweets2
    #followersheader(style='display: none;')
      h2 Number of followers:
      h3=name1
      h3(id='followers1')=followers1
      h3=name2
      h3(id='followers2')=followers2
    #favouritesheader(style='display: none;')
      h2 Number of favourites:
      h3=name1
      h3(id='favourites1')=favourites1
      h3=name2
      h3(id='favourites2')=favourites2
    #player1wins(style='display: none;')
      h3=name1 + " WINS!"
    #player2wins(style='display: none;')
      h3=name2 + " WINS!"
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
    script(src='/game.js')
